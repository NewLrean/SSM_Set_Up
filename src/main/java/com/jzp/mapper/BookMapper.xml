<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jzp.dao.IBookDao">
    
    <resultMap id="bookMap" type="com.jzp.domain.Book">
        <id property="id" column="id" ></id>
        <result property="title" column="title"></result>
        <result property="author" column="author"></result>
        <result property="publisherId" column="publisherId"></result>
        <result property="publishDate" column="publishDate"></result>
        <result property="isbn" column="isbn"></result>
        <result property="wordsCount" column="wordsCount"></result>
        <result property="unitPrice" column="unitPrice"></result>
        <result property="contentDescription" column="contentDescription"></result>
        <result property="aurhorDescription" column="aurhorDescription"></result>
        <result property="toc" column="toc"></result>
        <result property="editorComment" column="editorComment"></result>
        <result property="categoryId" column="categoryId"></result>
        <result property="clicks" column="clicks"></result>
        <result property="booksImages" column="booksImages"></result>
        <result property="quantity" column="quantity"></result>
        <result property="souhuo" column="souhuo"></result>
        <result property="address" column="address"></result>
        <result property="baoyou" column="baoyou"></result>
        <association property="category" javaType="com.jzp.domain.Category" fetchType="lazy">
            <id property="id" column="id" ></id>
            <result property="name" column="name"></result>
            <result property="description" column="description"></result>
        </association>

    </resultMap>

    <select id="findAllBook" resultMap="bookMap">
        SELECT * from books b INNER JOIN categories c on b.categoryId = c.id where b.tag= 1
    </select>

</mapper>